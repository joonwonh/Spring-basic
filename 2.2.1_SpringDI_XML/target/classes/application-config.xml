<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="helloService" class="com.javaEdu.myapp.hello.service.HelloService"  scope="singleton"/>
	<!-- HelloService helloService = new HelloService(); 와 동일한 뜻 -->
	
	<bean id="helloController" class="com.javaEdu.myapp.hello.controller.HelloController" >
		<property name="helloService"  ref="helloService"/>
		<!-- 의존성 주입 -->
		
	</bean>
	
	<bean id="personBean" class="com.javaEdu.myapp.hello.member.Person" >
		<property name="name"  value="홍길동"/>
		<property name="age"  value="30"/>
	</bean>
	
	<bean id="customer" class="com.javaEdu.myapp.hello.member.Customer" >
		<property name="lists" >
			<list>
				<value>1</value>
				<ref bean="personBean"/>
				<bean class="com.javaEdu.myapp.hello.member.Person">
					<property name="name"  value="홍길자"/>
					<property name="age"  value="12"/>				
				</bean>
			</list>
		</property>
	
		<property name="sets" >
			<set>
				<value>2</value>
				<ref bean="personBean"/>
				<bean class="com.javaEdu.myapp.hello.member.Person">
					<property name="name"  value="홍길순"/>
					<property name="age"  value="11"/>				
				</bean>
			</set>
		</property>
		
		<property name="maps" >
			<map>
				<entry key="Key1" value="3"/>
				<entry key="Key2" value-ref="personBean"/>
				<entry key="Key3">
					<bean class="com.javaEdu.myapp.hello.member.Person">
						<property name="name"  value="홍길똥"/>
						<property name="age"  value="8"/>				
					</bean>
				</entry>
			</map>
		</property>
		
		<property name="props">
			<props>
				<prop key="webmaster">webmaster@naver.com</prop>
				<prop key="support">support@naver.com</prop>
			</props>
		</property>
		
	</bean>
</beans>
